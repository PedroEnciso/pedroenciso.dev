---
import ContactIcons from './ContactIcons.astro'
import resume from '../assets/pedro_enciso.pdf'
---

<div class="content section_content_margin">
  <div class="header">
    <div class="name_container">
      <h1 class="name">Pedro Enciso</h1>
      <p class="title">Frontend Web Developer</p>
    </div>
    <div class="contact_icons">
      <ContactIcons />
    </div>
  </div>
  <p class="bio">I love to build applications and learn new web technologies.</p>
  <div class="btn_container">
    <a class="btn" href={resume} target="_blank">
      resume
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="arrow"><line x1="0" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
    </a>
  </div>
</div>

<style>
  .content {
    margin-top: 65px;
  }
  @container (width > 600px) {
    .content {
      margin-top: 100px;
    }
  }
  @media screen and (min-width: 1025px) {
    .content {
      margin-top: 0px;
    }
    .contact_icons {
      display: none;
    }
  }

  .name {
    font-weight: 700;
    color: var(--text-dark);
    font-size: 1.5rem;
    letter-spacing: -4%;
    line-height: 1;
    margin-bottom: 8px;
  }

  .title {
    font-weight: 500;
    font-size: 1.125rem;
    line-height: 1.25;
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  @container (min-width: 450px) {
    .header {
      flex-direction: row;
      justify-content: space-between;
      gap: 0rem;
    }
  }

  .bio {
    font-size: 1rem;
    line-height: 1.2;
    margin-top: 32px;
  }
  @container (min-width: 450px) {
    .bio {
      margin-top: 16px;
    }
  }

  .btn_container {
    margin-top: 2rem;
    height: 40px;
    width: fit-content;
  }

  .btn {
    font-size: .875rem;
    background-color: var(--accent-very-light);
    padding: 10px 24px;
    border: 2px solid var(--accent);
    font-weight: 600;
    color: var(--accent);
    border-radius: 10px;
    text-decoration: none;
    cursor: pointer;
    transition: transform .2s;
    position: relative;
  }

  .btn_container:hover .btn {
    transform: translate(2px, -2px);
    border-bottom: 4px solid var(--accent);
    border-left: 4px solid var(--accent)
  }

  .arrow {
    position: absolute;
    right: 2px;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0%;
    transition: opacity .2s;
  }

  .btn_container:hover .arrow {
    opacity: 100%;
  }
</style>