---
interface Props {
  techList: string[];
}

const {techList} = Astro.props;
---

<ul>
  {techList.map(tech => (
    <li>{tech}</li>
  ))}
</ul>

<style>
  ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  li {
    padding: .25rem .5rem;
    background-color: var(--accent-very-light);
    font-size: .875rem;
    font-weight: 500;
    color: var(--accent);
    border-radius: 50px;
  }
</style>